              { title: "Пицца ", url: "#piza"},
              { title: "Классическое меню", url: "#classic-menu"},
              { title: "Роллы", url: "#lolls"},
              { title: "Напитки ", url: "#drinks"},
              { title: "Акции ", url: "#actions"},
              { title: "Блог ", url: "#!"},
              { title: "О ресторане ", url: "#!"},
              { title: "Доставка", url: "#!"},
              { title: "Контакты", url: "#!"},
              ]
          each item in items
            li.menu__item
              a.menu__link(href=item.url)=item.title
    

